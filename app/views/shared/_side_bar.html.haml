.chat-side
  .chat-side__header
    .chat-side__header__box
      %p.chat-side__header__box__user-name
        = current_user.name
      %ul.chat-side__header__box__menu
        %li.chat-side__header__box__menu__new-group
          = link_to new_group_path do
            = fa_icon "edit"
        %li.chat-side__header__box__menu__edit-user
          = link_to edit_user_path(current_user) do
            = fa_icon "cog"
  .chat-side__groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .chat-side__groups__group
          %p.chat-side__groups__group__name
            = group.name
          %p.chat-side__groups__group__latest-message
            = group.show_last_message